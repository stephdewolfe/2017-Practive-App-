<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :vet %>
    <%= f.association :breed %>
    <%= f.input :weight %>
    <%= f.input :dob %>
    <%= f.input :in_daycare %>
    <%= f.simple_fields_for(custodies) do |custody_fields| %>
    <%= custody_fields.assocation :owner, collection: Owner.order (last_name, :first_name) %>
    <% if custody_fields.object.persisted?  %>
    <%= custody_fields.input :_destroy, as: :boolean %>
    <%end %>
  <%end %>
<%end %>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
